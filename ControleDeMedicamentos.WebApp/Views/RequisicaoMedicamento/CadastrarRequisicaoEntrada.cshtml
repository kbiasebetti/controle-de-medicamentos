@{
    ViewBag.Titulo = "Cadastro de Requisição de Entrada";
}

@model CadastrarRequisicaoEntradaViewModel

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <form asp-action="CadastrarRequisicaoEntrada" method="post">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title my-1">Registrar Entrada de Medicamento</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="MedicamentoId" class="form-label">Medicamento</label>
                        <select class="form-select" asp-for="MedicamentoId" asp-items="@Model.MedicamentosDisponiveis">
                            <option value="">-- Selecione um Medicamento --</option>
                        </select>
                        <span asp-validation-for="MedicamentoId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FuncionarioId" class="form-label">Funcionário Responsável</label>
                        <select class="form-select" asp-for="FuncionarioId" asp-items="@Model.FuncionariosDisponiveis">
                            <option value="">-- Selecione um Funcionário --</option>
                        </select>
                        <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QuantidadeRequisitada" class="form-label">Quantidade de Entrada</label>
                        <input class="form-control" asp-for="QuantidadeRequisitada" value="1" type="number" min="1">
                        <span asp-validation-for="QuantidadeRequisitada" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer bg-transparent text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Voltar</a>
                    <button type="submit" class="btn btn-primary px-4">Cadastrar Entrada</button>
                </div>
            </div>
        </form>
    </div>
</div>